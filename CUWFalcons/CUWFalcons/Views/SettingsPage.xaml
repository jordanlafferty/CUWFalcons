<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CUWFalcons.Views.SettingsPage"
    BackgroundColor="White"
    Title="Settings">
    <ContentPage.Content>
        <StackLayout Padding="10,10,10,10" VerticalOptions="Center">
             <Button VerticalOptions="Center" Text="Logout" BackgroundColor="#245699" x:Name="logoutBtn" Clicked="logoutBtn_Clicked" Command="{Binding LogoutCommand}"/>
             <Button Text="Go to CUWFalcons.com" x:Name="websiteBtn" BackgroundColor="#245699" Clicked="websiteBtn_Clicked"></Button>
            <StackLayout>
                 <Button Text="Add a New Sport" x:Name="newSportBtn" BackgroundColor="#245699" Clicked="newSportBtn_Clicked" ></Button>
                 <Button Text="View/Edit Sports" x:Name="viewSportBtn" BackgroundColor="#245699" Clicked="viewSportBtn_Clicked" ></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

